<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/re_cancel1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_remove"
                android:layout_gravity="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:layout_marginTop="20sp">

<!--                <Button-->
<!--                    android:id="@+id/reschedule_date_time"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/pink_grad_button"-->
<!--                    android:fontFamily="@font/cairo_regular"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="16sp"-->
<!--                    android:padding="10dp"-->
<!--                    android:text="@string/choose_date_time"-->
<!--                    android:layout_gravity="center_horizontal"/>-->

<!--                <TextView-->
<!--                    android:id="@+id/schedule_timing"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="5dp"/>-->

<!--                <com.google.android.material.textfield.TextInputLayout-->
<!--                    android:layout_width="fill_parent"-->
<!--                    android:layout_height="wrap_content">-->

                    <TextView
                        android:id="@+id/reschedule_date_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select reschedule date and time"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:textColor="@color/txtColorLabel" />

<!--                </com.google.android.material.textfield.TextInputLayout>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/re_cancel"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/cancel"
                    android:background="@drawable/grey_round_btn"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35sp"/>
                <Button
                    android:layout_marginStart="10dp"
                    android:id="@+id/re_save"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/save_schedule"
                    android:background="@drawable/pink_grad_button"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>