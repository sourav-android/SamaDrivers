<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15sp"
    android:layout_weight="1"
    android:orientation="horizontal"
    app:contentPadding="10sp"
    app:strokeColor="@color/border"
    app:strokeWidth="1sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/order_box" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

<!--                <TextView-->
<!--                    android:id="@+id/order_no"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:fontFamily="@font/cairo_regular"-->
<!--                    android:text="Order No : SD0000005"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="17sp" />-->

                <TextView
                    android:id="@+id/invoice_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_regular"
                    android:text="Invoice No : "
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/grabOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/pink_grad_button"
                    android:fontFamily="@font/cairo_bold"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/grab_order"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/order_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_regular"
                    android:text="Order No : SD0000005"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/callCust"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_call"
                    android:fontFamily="@font/cairo_bold"
                    android:paddingStart="10dp"
                    android:paddingEnd="30dp"
                    android:text="@string/grab_order"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/callWhatsapp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_whatsapp"
                    android:fontFamily="@font/cairo_bold"
                    android:paddingStart="10dp"
                    android:paddingEnd="30dp"
                    android:text="@string/grab_order"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/invoice_no"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/cairo_regular"-->
<!--                android:text="Invoice No : "-->
<!--                android:textColor="@color/txtColorLabel"-->
<!--                android:textSize="14sp" />-->

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_regular"
                android:text="Ordered on : 27/04/2020"
                android:textColor="@color/txtColorLabel"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rescdle_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_regular"
                    android:text="Reschedule on : "
                    android:textColor="@color/txtColorLabel"
                    android:textSize="14sp" />

<!--                <TextView-->
<!--                    android:id="@+id/rescdle_date2"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:fontFamily="@font/cairo_regular"-->
<!--                    android:layout_marginLeft="5dp"-->
<!--                    android:text=""-->
<!--                    android:textColor="@color/txtColorLabel"-->
<!--                    android:textSize="14sp" />-->

            </LinearLayout>


            <TextView
                android:id="@+id/shipping_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_regular"
                android:text="@string/order_on"
                android:textColor="@color/txtColorLabel"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_regular"
                    android:text="120 AED"
                    android:textAllCaps="true"
                    android:textColor="@color/text_pink_clr"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/paybale_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_regular"
                    android:text="(COD)"
                    android:textColor="@color/txtColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/cairo_regular"
                    android:text="(Item : 3)"
                    android:textColor="@color/txtColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/cairo_regular"
                android:text="Delivered"
                android:textColor="@color/green_txt_clr"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
