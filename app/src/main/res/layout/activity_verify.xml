<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentTop="true"
        layout="@layout/back_title_header"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/cairo_regular"
        android:gravity="center"
        android:text="@string/otp_has_been_sent_to_your_mobile"
        android:textColor="@color/txtColorLabel"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/cairo_regular"
        android:gravity="center"
        android:text="@string/enter_otp"
        android:textColor="@color/txtColorLabel"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:backgroundTint="@color/txtColorLabel"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/txtColorLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:maxLength="1"
            android:layout_weight="1"
            android:backgroundTint="@color/txtColorLabel"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/txtColorLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:maxLength="1"
            android:layout_weight="1"
            android:backgroundTint="@color/txtColorLabel"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/txtColorLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:backgroundTint="@color/txtColorLabel"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/txtColorLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:maxLength="1"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/txtColorLabel"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/txtColorLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat"/>

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:maxLength="1"
            android:layout_weight="1"
            android:backgroundTint="@color/txtColorLabel"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/txtColorLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <Button
        android:id="@+id/verify"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/cairo_regular"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:text="@string/verify"
        android:background="@drawable/pink_grad_button"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="55sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:text="@string/if_you_didnt_receive_a_code"
            android:textColor="@color/txtColorLabel"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/resend_tv"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:text="@string/click_here"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </LinearLayout>


        <TextView
            android:id="@+id/otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:text="@string/enter_otp"
            android:textColor="@color/txtColorLabel"
            android:textSize="15dp" />


</LinearLayout>