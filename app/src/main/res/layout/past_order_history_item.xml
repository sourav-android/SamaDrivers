<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15sp"
    android:layout_weight="1"
    android:orientation="horizontal"
    app:contentPadding="10sp"
    app:strokeColor="@color/border"
    app:strokeWidth="1sp"
    android:id="@+id/item"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/past_order"/>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/order_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_regular"
                    android:text="@string/order_no"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/pink_grad_button"
                    android:fontFamily="@font/cairo_bold"
                    android:id="@+id/reorder"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/re_order"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/pink_grad_button"
                    android:fontFamily="@font/cairo_bold"
                    android:id="@+id/trackorder"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/track_order"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_regular"
                android:text="@string/order_on"
                android:textColor="@color/txtColorLabel"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/shipping_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_regular"
                android:text="@string/order_on"
                android:textColor="@color/txtColorLabel"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_regular"
                    android:text="120 AED"
                    android:textAllCaps="true"
                    android:textColor="@color/text_pink_clr"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/paybale_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/cairo_regular"
                    android:text="(COD)"
                    android:layout_weight="1"
                    android:textColor="@color/txtColor"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/cairo_regular"
                    android:text="(Item : 3)"
                    android:textColor="@color/txtColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/cairo_regular"
                android:text="Delivered"
                android:textColor="@color/green_txt_clr"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
